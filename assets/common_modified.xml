        <mesh name="link_6"      file="my_objects/robot/link_6.stl" />
        <mesh name="pusher_link" file="my_objects/robot/pusher_link.stl" scale="0.001 0.001 0.001"/>

        <!-- MY OBJECTS -->
        <mesh name="flashlight_exp" file="my_objects/flashlight/flashlight_exp.stl" />
        <mesh name="heart_exp" file="my_objects/heart/heart_exp.stl" />
        <mesh name="L_exp" file="my_objects/L/L_exp.stl" />
