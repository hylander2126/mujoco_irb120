<?xml version="1.0" encoding="utf-8"?>
<mujoco>
	<visual>
		<global offwidth="1280" offheight="720"/>
	</visual>
	
	<compiler angle="radian" coordinate="local" meshdir="meshes/" texturedir="textures/"> </compiler>

	<option timestep="0.002">
		<flag warmstart="enable"/>
	</option>
	<option>
		<flag multiccd="enable"/>
	</option>

	<include file="shared.xml"></include>

	<actuator>
        <!-- Position Control -->
		<position joint="joint_1" name="joint_1" kp="1000" kv="100" forcerange="-2 2"/>
		<position joint="joint_2" name="joint_2" kp="1000" kv="100" forcerange="-2 2"/>
		<position joint="joint_3" name="joint_3" kp="1000" kv="100" forcerange="-2 2"/>
		<position joint="joint_4" name="joint_4" kp="1000" kv="100" forcerange="-2 2"/>
		<position joint="joint_5" name="joint_5" kp="1000" kv="100" forcerange="-2 2"/>
		<position joint="joint_6" name="joint_6" kp="1000" kv="100" forcerange="-2 2"/>

		<!-- Velocity Control -->
		<!-- <velocity joint="joint_1" name="joint_1" kv="1"/>
        <velocity joint="joint_2" name="joint_2" kv="1"/>
        <velocity joint="joint_3" name="joint_3" kv="1"/>
        <velocity joint="joint_4" name="joint_4" kv="1"/>
        <velocity joint="joint_5" name="joint_5" kv="1"/>
        <velocity joint="joint_6" name="joint_6" kv="1"/> -->

		<!-- Torque Control -->
		<!-- <motor joint="joint_1" name="joint_1" gear="100"/>
		<motor joint="joint_2" name="joint_2" gear="100"/>
		<motor joint="joint_3" name="joint_3" gear="100"/>
		<motor joint="joint_4" name="joint_4" gear="100"/>
		<motor joint="joint_5" name="joint_5" gear="100"/>
		<motor joint="joint_6" name="joint_6" gear="100"/> -->
	</actuator>

	<worldbody>
		<geom name="floor" size="5 5 5" type="plane" material="grid_mat"/>
		<!-- <camera name="closeup" pos="0 -100 .07" xyaxes="1 0 0 0 1 2"/> -->
		<include file="robot/robot.xml"></include>
		
		<!-- Table Surface === Recall geom SIZE is half-dims so table surface is 2*(0.02) = 0.04 and the top of the surface is at z = 0.08 + 0.02 = 0.1 -->
		<body pos="1.25 0 0.08" name="table0">
			<geom size="0.5 0.35 0.02" type="box" name="table" mass="2000" material="table_mat" friction="1 0.005 0.0001"></geom>
			<site name="surface_site" pos="0 0 0" size = "0.02 0.02 0.02" type="box" rgba="1 1 0 0"></site>
		</body>
		<!-- Table Base === Recall geom SIZE is half-dims so top of table base is at z = 0.08 + 2*(0.02) = 0.12 --> 
		<body pos="1.25 0 0.03" name="table1">
			<geom size="0.15 0.25 0.03" type="box" mass="2000" material="table_mat" friction="1 0.005 0.0001"></geom>
		</body>

		<!-- Rectangular object -->
		<!-- <include file="object_sim/box.xml"></include> -->

		<!-- Flashlight object -->
		<!-- <include file="object_sim/flash.xml"></include> -->

		<!-- Stanford bunny object -->
		<include file="object_sim/stanfordbunny.xml"></include>

		<light directional="true" ambient="0.2 0.2 0.2" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" castshadow="false" pos="0 0 4" dir="0 0 -1" name="light0"></light>
	</worldbody>
</mujoco>
